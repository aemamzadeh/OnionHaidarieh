@model List<_01_HaidariehQuery.Contracts.CeremonyGuests.CeremonyGuestQueryModel>

<div class="gap remove-gap">
    <div class="container">
        <div class="evnt-pry-wrap">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-lg-12">
                    <div class="sec-title">
                        <div class="sec-title2 text-center">
                            <h3>رویدادهای<span> اخیر </span></h3>
                        </div>
                        <p>حیدریة النجف الاشرف حیدریة النجف الاشرف رویداد های مختلفی در طول سال برگزار میکند.</p>
                    </div>
                    <div class="evnt-wrap remove-ext5">
                        <div class="row mrg20">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-4 col-sm-4 col-lg-4">
                                    <div class="evnt-box">
                                        <div class="evnt-thmb">
                                            <a asp-page="/MultimediaDetail/Detail" asp-route-Id=@item.Slug>
                                                <img src="@item.Image" title="@item.ImageTitle" alt="@item.ImageAlt">
                                            </a>
                                        </div>
                                        <div class="evnt-info">
                                            <h4>@item.Ceremony</h4>
                                            <ul class="pst-mta">
                                                <li class="thm-clr">@item.CeremonyDateFa</li>
                                                <li class="thm-clr">12:00 صبح تا 2:00 ظهر</li>
                                            </ul>
                                            <p>شهر اصلی - بخش جدید - مسجد تازه ساخت</p>
                                        </div>
                                    </div>
                                </div>

                            }

                        </div>
                    </div><!-- Events Wrap -->
                </div>

            </div>
        </div><!-- Events & Prayer Wrap -->
    </div>
</div>

