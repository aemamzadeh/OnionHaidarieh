@model Haidarieh.Application.Contracts.CeremonyGuest.EditCeremonyGuest
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش مراسم</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="CeremonyId" class="control-label">مراسم</label>
                        <select type="text" class="form-control" asp-for="CeremonyId" asp-items='new SelectList(Model.Ceremonies,"Id","Title")'>
                            <option value="0">انتخاب مراسم</option>
                        </select>
                        <span asp-validation-for="CeremonyId" class="error"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="GuestId" class="control-label">میهمان</label>
                        <select type="text" class="form-control" asp-for="GuestId" asp-items='new SelectList(Model.Guests,"Id","FullName")'>
                            <option value="0">انتخاب میهمان</option>
                        </select>
                        <span asp-validation-for="GuestId" class="error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Satisfication" class="control-label">میزان رضایتمندی</label>
                        <input type="text" class="form-control" asp-for="Satisfication">
                        <span asp-validation-for="Satisfication" class="error"></span>
                    </div>
                </div>
            </div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />

        </div>
</div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>

