@model Haidarieh.Application.Contracts.Multimedia.EditMultimedia
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش فایل</h4>
</div>

<form asp-page="./Index" asp-page-handler="EditMetadata"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="CeremonyId" class="control-label">مراسم</label>
                    <select type="text" class="form-control" asp-for="CeremonyId" asp-items='new SelectList(Model.Ceremonies,"Id","Title")' onchange="fillField('selectedItem', 'Title')">
                        <option value="0">انتخاب مراسم</option>
                    </select>
                    <span asp-validation-for="CeremonyId" class="error"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Title" class="control-label">عنوان</label>
                    <input type="text" class="form-control" asp-for="Title">
                    <span asp-validation-for="Title" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FileTitle" class="control-label">عنوان فایل</label>
                    <input type="text" class="form-control" asp-for="FileTitle" onchange="fillField('FileTitle', 'FileAlt')" />
                    <span asp-validation-for="FileTitle" class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FileAlt" class="control-label">عنوان فایل در گوگل</label>
                    <input type="text" class="form-control" asp-for="FileAlt">
                    <span asp-validation-for="FileAlt" class="error"></span>
                </div>
            </div>
        </div>
            <input type="hidden" asp-for="Id" value="@Model.Id">

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
            <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
        </div>
</form>

