@model Haidarieh.Application.Contracts.Multimedia.CreateMultimedia
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد فایل جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Title" class="control-label">نام و نام خانوادگی</label>
                    <input type="text" class="form-control" asp-for="Title" onchange="makeSlug('Name', 'Slug')">
                    <span asp-validation-for="Title" class="error"></span>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CeremonyGuestId" class="control-label">تلفن</label>
                        <input type="text" class="form-control" asp-for="CeremonyGuestId">
                        <span asp-validation-for="CeremonyGuestId" class="error"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="FileAddress" class="control-label">فایل</label>
                        <input type="text" class="form-control" asp-for="FileAddress">
                        <span asp-validation-for="FileAddress" class="error"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FileTitle" class="control-label">تلفن</label>
                        <textarea class="form-control autogrow" asp-for="FileTitle" onchange="fillField('FileTitle', 'FileAlt')"
                                  style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                        <span asp-validation-for="FileTitle" class="error"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FileAlt" class="control-label">تلفن</label>
                        <input type="text" class="form-control" asp-for="FileAlt">
                        <span asp-validation-for="FileAlt" class="error"></span>
                    </div>
                </div>

            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
            <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
        </div>
</form>

