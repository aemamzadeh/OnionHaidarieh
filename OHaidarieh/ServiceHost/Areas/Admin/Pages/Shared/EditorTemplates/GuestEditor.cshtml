@(Html.Kendo().DropDownList()
    .Name("Guest") // The name of the widget has to be the same as the name of the property.
    .DataValueField("GuestId") // The value of the drop-down is taken from the EmployeeID property.
    .DataTextField("FullName") // The text of the items is taken from the EmployeeName property.
    .BindTo((System.Collections.IEnumerable)ViewData["guests"]) // A list of all employees which is populated in the controller.
)
